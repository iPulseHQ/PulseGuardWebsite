# Security and Performance Headers for PulseGuard
# This file is for hosting providers that support _headers files (like Netlify, Vercel)

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-DNS-Prefetch-Control: on
  
  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.clarity.ms; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://www.google-analytics.com https://analytics.google.com; media-src 'self'; object-src 'none'; child-src 'self'; worker-src 'self'; form-action 'self'; base-uri 'self'; manifest-src 'self';
  
  # HSTS (HTTPS Enforcement)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Cache headers for static assets
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Specific headers for API routes (if any)
/api/*
  X-Robots-Tag: noindex, nofollow

# SEO files
/robots.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=3600

/sitemap*.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=3600

/ai.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=3600

/llms.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=3600

/ads.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=3600
  X-Robots-Tag: noindex, nofollow